{
    "compilerOptions": {
      "target": "ES2015",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": [
        "DOM",
        "ESNext",
        "ES2015"
      ],
      "jsx": "react-jsx",
      "noEmit": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*"]
}
  